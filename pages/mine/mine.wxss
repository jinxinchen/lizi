.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
  background: orange;
  height: 400rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  margin-top: 10%;
}

.user-motto {
  font-size: 24rpx;
}

.contain {
  direction: column;
  text-align: center;
  width: 450rpx;
}

.contain1 {
  float: left;
  padding-left: 20rpx;

  color: white;
  padding-top: 10rpx;
}

.contain2 {
  color: white;
  font-size: 26rpx;
  padding-top: 10rpx;

}

.sign {
  height: 70px;
  display: inline-flex;
  margin-left: 20rpx;
}

.person_image {
  width: 140rpx;
  height: 140rpx;
}

.hi {
  color: white;
  font-size: 44rpx;
}

.contiue {
  color: white;
  font-size: 25rpx;
}

.font {
  margin-left: 20rpx;
}

.icon {
  display: inline-flex;
  width: 100%;
  background-color: white;
  display: -webkit-flex;
  direction: column;
  padding-top: 20rpx;
  padding-bottom: 40rpx;
}

.icon_first {
  height: 100rpx;
  width: 100rpx;
}

.margin {
  text-align: center;
  flex: 1;
  font-size: 26rpx;
  width: 200rpx;
}

.icon_club {
  color: dimgray;
}

.all_message {
  background-color: rgb(224, 224, 224);
}

.items {
  padding-top: 14rpx;
  display: -webkit-flex;
  background-color: white;
}

.small_png {
  height: 40rpx;
  width: 40rpx;
  margin-right: 34rpx;
  margin-left: 30rpx;
}

.border {
